<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="@color/white_dark"/>
            <stroke android:width="1dp" android:color="@color/gray_a"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp"/>
            <solid android:color="#ebeaea"/>
            <stroke android:width="2dp" android:color="#d3cdcd"/>
        </shape>
    </item>
</selector>
